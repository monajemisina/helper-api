{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",                         
    "moduleResolution": "node",
    "rootDir": ".",                                 
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "server.ts"]
}
